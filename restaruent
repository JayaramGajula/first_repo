def main_screen():
    global screen
    screen=Tk()
    screen.geometry("500x250")
    screen.title("multiple choice correction")
    Label(text="MARKS VERFICATION",bg="red",font=("calibri",15)).pack()
    Label(text="").pack()
    Button(text="login",command=login).pack()
    Label(text="").pack()
    Button(text="register",command=register).pack()
    screen.mainloop()
main_screen()
